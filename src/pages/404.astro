---
import Layout from "../components/main.astro";
---

<Layout title="404 Sayfa Bulunamadı">
	<div class="container">
		<div class="page">
			<div class="navtop">
				<div class="clickm">
					<div class="sekme" style="background-color: red;"></div>
					<div class="sekme" style="background-color: orange;"></div>
					<div class="sekme" style="background-color: green;"></div>
					<p>
						<img src="./images/logo.png" alt="logo-arastiranlar" /> Arastiranlar
					</p>
				</div>
			</div>
			<div class="mainpage">
				<h1
					style="color: #389d77;font-weight: bold;margin-right: 15px;"
				>
					404
				</h1>
				<h2>Sayfaya Erişilemiyor!</h2>
			</div>
		</div>
		<div class="textarea">
			<h1>Kayıp mı Oldun ?</h1>
			Şimdi <a href="/" style="color: #389d77;">Anasayfa</a> 'ya gidebilirsin!
		</div>
	</div>
</Layout>

<style>
	body {
		background-color: #d4d3d3;
	}
	.container {
		width: 100%;
		height: 70vh;
		display: flex;
		justify-content: flex-start;
		align-items: center;
		flex-direction: column;
		flex-direction: row;
		justify-content: center;
		align-items: center;
	}
	h1 {
		font-weight: bold;
		font-size: 2.2rem;
		margin: 10px 0;
	}
	.textarea {
		margin-left: 20px;
	}
	.page {
		width: 400px;
		height: 240px;
		background-color: #f3f3f3;
		border-radius: 10px;
		box-shadow: 2px -1px 15px 0px rgb(152, 152, 152);
	}
	.navtop {
		width: 400px;
		height: 20px;
		background-color: rgb(222, 222, 222);
		border-radius: 10px 10px 0 0;
		display: flex;
		justify-content: flex-start;
	}
	.navtop p {
		padding: 0 15px;
		font-size: 0.9rem;
		color: #404040;
		border-radius: 5px 5px 0 0;
		background-color: #f3f3f3;
		margin: 0 10px;
	}
	.navtop p img {
		width: 10px;
		margin-top: 5px;
	}
	.clickm {
		width: 400px;
		height: 20px;
		display: flex;
		justify-content: flex-start;
	}
	.sekme {
		width: 10px;
		height: 10px;
		border-radius: 10px;
		margin: 5px;
	}
	.mainpage {
		width: 400px;
		height: 220px;
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>
